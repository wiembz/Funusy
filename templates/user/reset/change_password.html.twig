

{% block title %}Change Password{% endblock %}

{% block body %}
    <h1>Change Password</h1>

    {% if app.request.method == 'POST' and form.vars.errors|length > 0 %}
        <div class="alert alert-danger">
            {% for error in form.vars.errors %}
                {{ error.message }}
            {% endfor %}
        </div>
    {% endif %}

    <form method="post">
        {{ form_start(form) }}
        <div class="form-group">
            {{ form_label(form.new_password) }}
            {{ form_widget(form.new_password, { 'attr': {'class': 'form-control'} }) }}
        </div>
        <div class="form-group">
            {{ form_label(form.confirm_password) }}
            {{ form_widget(form.confirm_password, { 'attr': {'class': 'form-control'} }) }}
        </div>
        <button type="submit" class="btn btn-primary">Change Password</button>
        {{ form_end(form) }}
    </form>
{% endblock %}
