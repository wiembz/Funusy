{% block title %}Change Password{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mt-5 mb-4">Change Password</h1>

        {% if app.request.method == 'POST' and form.vars.errors|length > 0 %}
            <div class="alert alert-danger">
                {% for error in form.vars.errors %}
                    {{ error.message }}
                {% endfor %}
            </div>
        {% endif %}

        <form method="post" class="custom-form">
            {{ form_start(form) }}
            <div class="form-group">
                {{ form_label(form.new_password, 'New Password', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.new_password, { 'attr': {'class': 'form-control input-field'} }) }}
            </div>
            <div class="form-group">
                {{ form_label(form.confirm_password, 'Confirm Password', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.confirm_password, { 'attr': {'class': 'form-control input-field'} }) }}
            </div>
            <button type="submit" class="btn btn-primary">Change Password</button>
            {{ form_end(form) }}
        </form>
    </div>
    <style>/* Custom CSS for the change password form */

.custom-form {
    max-width: 400px;
    margin: auto;
}

.form-label {
    font-weight: bold;
}

.input-field {
    border-radius: 5px;
    border: 1px solid #ced4da;
    padding: 0.375rem 0.75rem;
    transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
}

.input-field:focus {
    border-color: #80bdff;
    outline: 0;
    box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
}
</style>
{% endblock %}
