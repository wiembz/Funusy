{# templates/user/reset/reset_verification_form.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Reset Password{% endblock %}

{% block body %}
    <h1>Reset Password</h1>

    {{ form_start(form) }}
    {{ form_errors(form) }}

    <div class="form-group">
        {{ form_label(form.reset_token) }}
        {{ form_widget(form.reset_token, {'attr': {'class': 'form-control'}}) }}
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
    {{ form_end(form) }}
   
{% endblock %}
