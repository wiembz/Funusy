{% extends 'BACK/base.html.twig' %}

{% block title %}Projet{% endblock %}

{% block body %}
    <div class="content-wrapper">
        <div class="container-xxl flex-grow-1 container-p-y">
            <h1>Projet</h1>

            <table class="table">
                <tbody>
                    <tr>
                        <th>IdProjet</th>
                        <td>{{ projet.idProjet }}</td>
                    </tr>
                    <tr>
                        <th>NomProjet</th>
                        <td>{{ projet.nomProjet }}</td>
                    </tr>
                    <tr>
                        <th>MontantReq</th>
                        <td>{{ projet.montantReq }}</td>
                    </tr>
                    <tr>
                        <th>Longitude</th>
                        <td>{{ projet.longitude }}</td>
                    </tr>
                    <tr>
                        <th>Latitude</th>
                        <td>{{ projet.latitude }}</td>
                    </tr>
                    <tr>
                        <th>TypeProjet</th>
                        <td>{{ projet.typeProjet }}</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>{{ projet.description }}</td>
                    </tr>
                </tbody>
            </table>

            <a href="{{ path('app_projet_back_index') }}" class="btn btn-secondary">Back to list</a>
            <a href="{{ path('app_projet_back_edit', {'idProjet': projet.idProjet}) }}" class="btn btn-primary">Edit</a>

            {{ include('projet_back/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
