{% block body %}
    <script src="{{ asset('https://cdn.jsdelivr.net/npm/chart.js')}}"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function() {
            var ctx = document.getElementById('projectChart').getContext('2d');
            var myChart = new Chart(ctx, {
                type: 'doughnut', // Change type to doughnut
                data: {
                    labels: [
                        {% for project in projectTypes %}
                            '{{ project.type }}',
                        {% endfor %}
                    ],
                    datasets: [{
                        label: 'Number of Projects',
                        data: [
                            {% for project in projectTypes %}
                                '{{ project.count }}',
                            {% endfor %}
                        ],
                        backgroundColor: [
                            'rgba(255, 99, 132, 0.2)',
                            'rgba(54, 162, 235, 0.2)',
                            'rgba(255, 206, 86, 0.2)',
                            'rgba(75, 192, 192, 0.2)',
                            'rgba(153, 102, 255, 0.2)',
                            'rgba(100, 159, 64, 0.2)' // Adjust colors as needed
                        ],
                        borderColor: [
                            'rgba(255, 99, 132, 1)',
                            'rgba(54, 162, 235, 1)',
                            'rgba(255, 206, 86, 1)',
                            'rgba(75, 192, 192, 1)',
                            'rgba(153, 102, 255, 1)',
                            'rgba(100, 159, 64, 1)' // Adjust colors as needed
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    cutoutPercentage: 50, // Adjust this value for the size of the hole in the middle (50 means a perfect donut shape)
                    plugins: {
                        legend: {
                            position: 'top',
                        },
                        title: {
                            display: true,
                            text: 'Number of Projects by Type'
                        }
                    }
                }
            });
        });
    </script>
{% endblock %}
