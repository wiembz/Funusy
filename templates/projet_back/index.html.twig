{% extends 'BACK/base.html.twig' %}

{% block title %}Project index{% endblock %}

{% block body %}
    <div class="content-wrapper">
        <div class="container-xxl flex-grow-1 container-p-y">
            <div class="card">
                <h5 class="card-header">Project List</h5>
                <div class="table-responsive text-nowrap">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>IdProjet</th>
                                <th>NomProjet</th>
                                <th>MontantReq</th>
                                <th>Longitude</th>
                                <th>Latitude</th>
                                <th>TypeProjet</th>
                                <th>Description</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for projet in projets %}
                                <tr>
                                    <td>{{ projet.idProjet }}</td>
                                    <td>{{ projet.nomProjet }}</td>
                                    <td>{{ projet.montantReq }}</td>
                                    <td>{{ projet.longitude }}</td>
                                    <td>{{ projet.latitude }}</td>
                                    <td>{{ projet.typeProjet }}</td>
                                    <td>{{ projet.description }}</td>
                                    <td>
                                        <a href="{{ path('app_projet_back_show', {'idProjet': projet.idProjet}) }}" class="btn btn-sm btn-info">Show</a>
                                        <a href="{{ path('app_projet_back_edit', {'idProjet': projet.idProjet}) }}" class="btn btn-sm btn-primary">Edit</a>
                                        <form method="post" action="{{ path('app_projet_back_delete', {'idProjet': projet.idProjet}) }}" style="display: inline-block;" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                            <input type="hidden" name="_method" value="DELETE">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ projet.idProjet) }}">
                                            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="8">No records found</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            <br>
            <a href="{{ path('app_projet_back_new') }}" class="btn btn-primary">Create a new Project</a>
        </div>
    </div>
{% endblock %}
