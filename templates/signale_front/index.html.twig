{% extends 'baseF.html.twig' %}

{% block title %}Signale index{% endblock %}

{% block body %}
    <br>
    <br>
    <br>
    <h1 class="mb-4">Signales</h1>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Date</th>
                <th scope="col">Description</th>
                <th scope="col">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for signale in signales %}
                <tr>
                    <td>{{ signale.idSignal }}</td>
                    <td>{{ signale.dateSignal ? signale.dateSignal|date('Y-m-d') : '' }}</td>
                    <td>{{ signale.description }}</td>
                    <td>
                        <a href="{{ path('app_signale_front_show', {'idSignal': signale.idSignal}) }}" class="btn btn-sm btn-info">Show</a>
                        <a href="{{ path('app_signale_front_edit', {'idSignal': signale.idSignal}) }}" class="btn btn-sm btn-warning">Edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">No records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>


{% endblock %}
