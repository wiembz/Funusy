{{ form_start(form) }}
{{ form_widget(form._token) }}

<div class="card mb-4">
    <div class="card-header d-flex justify-content-between align-items-center"></div>
    
    <div class="card-body">
        {% if form_errors(form) %}
            <div class="alert alert-danger" role="alert">
                {{ form_errors(form) }}
            </div>
        {% endif %}
        
        <div class="row">
            <div class="mb-3 col-md-6">
                <label class="form-label" for="basic-icon-default-numCarte">num_carte</label>
                {{ form_widget(form.numCarte, {'attr': {'class': 'form-control'}}) }}
                <div class="text-danger mt-2">{{ form_errors(form.user) }}</div>
            </div>
            
                <div class="mb-3 col-md-6">
                    <label class="form-label" for="basic-icon-default-rib">RIB</label>
                    {{ form_widget(form.rib, {'attr': {'class': 'form-control'}}) }}
                    <div class="text-danger mt-2">{{ form_errors(form.rib) }}</div>
                </div>
        </div>

        <div class="row">
            <div class="mb-3 col-md-6">
                <label class="form-label" for="basic-icon-default-dateExp">Date</label>
                {{ form_widget(form.dateExp, {'attr': {'class': 'form-control'}}) }}
                <div class="text-danger mt-2">{{ form_errors(form.dateExp) }}</div>
            </div>

            <div class="row">
            <div class="mb-3 col-md-6">
                <label class="form-label" for="basic-icon-default-code">Code</label>
                {{ form_widget(form.code, {'attr': {'class': 'form-control'}}) }}
                <div class="text-danger mt-2">{{ form_errors(form.code) }}</div>
            </div>

            <div class="row">
                <div class="mb-3 col-md-6">
                    <label class="form-label" for="basic-icon-default-code">CVV2</label>
                    {{ form_widget(form.cvv2, {'attr': {'class': 'form-control'}}) }}
                    <div class="text-danger mt-2">{{ form_errors(form.cvv2) }}</div>
                </div>
            
        </div>
       
        
        <button type="submit" class="btn btn-primary">{{ button_label|default('Add') }}</button>
        <a href="{{ path('app_compte_back_index') }}" class="btn btn-secondary">Back to list</a>
    </div>
</div>

{{ form_end(form) }}
