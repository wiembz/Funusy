{% extends "back/base.html.twig" %}

{% block body %}
    <div class="content-wrapper">
        <div class="container-xxl flex-grow-1 container-p-y">
            <div class="card">
                <h5 class="card-header">Investissement List</h5>
                <div class="table-responsive text-nowrap">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Montant</th>
                                <th>Date Inv</th>
                                <th>Periode</th>
                                <th>User</th>
                                <th>Projet</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for investissement in investissements %}
                                <tr>
                                    <td>{{ investissement.montant }}</td>
                                    <td>{{ investissement.dateInv ? investissement.dateInv.format("d M Y") : '' }}</td>
                                    <td>{{ investissement.periode }}</td>
                                    <td>{{ investissement.user.nomUser }}</td>
                                    <td>{{ investissement.projet.nomProjet }}</td>
                                    <td>
                                        <div class="dropdown">
                                            <button
                                                type="button"
                                                class="btn p-0 dropdown-toggle hide-arrow"
                                                data-bs-toggle="dropdown"
                                            >
                                                <i class="bx bx-dots-vertical-rounded"></i>
                                            </button>
                                            <div class="dropdown-menu">
                                                <a class="dropdown-item text-warning" href="{{ path('app_investissement_edit', {'idInvestissement': investissement.idInvestissement}) }}">
                                                    <i class="bx bx-edit-alt me-1"></i> Edit
                                                </a>
                                                <a class="dropdown-item text-danger" href="{{ path('app_investissement_delete', {'idInvestissement': investissement.idInvestissement}) }}">
                                                    <i class="bx bx-trash me-1"></i> Delete
                                                </a>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>

                </div>

            </div>
            <br>
          <a href="{{ path('app_investissement_new') }}" class="btn btn-primary">Create new Investment</a>

        </div>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script>
        $(document).ready(function() {
            $('.delete-investissement').click(function(e) {
                e.preventDefault();
                const investissementId = $(this).data('investissement-id');
                const deleteLink = $(this); // Store reference to this

                $.ajax({
                    url: '{{ path('app_investissement_delete', {'idInvestissement': 'INVESTISSEMENT_ID'}) }}'.replace('INVESTISSEMENT_ID', investissementId),
                    type: 'DELETE',
                    success: function(response) {
                        deleteLink.closest('tr').remove(); // Use stored reference
                    },
                    error: function(xhr, status, error) {
                        console.error(error);
                    }
                });
            });
        });
    </script>

{% endblock %}