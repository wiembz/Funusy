{{ form_start(form) }}
{{ form_widget(form._token) }}

<div class="card mb-4">
    <div class="card-header d-flex justify-content-between align-items-center"></div>

    <div class="card-body">
        {% if form_errors(form) %}
            <div class="alert alert-danger" role="alert">
                {{ form_errors(form) }}
            </div>
        {% endif %}

        <div class="row">
            <div class="mb-3 col-md-6">
                <label class="form-label" for="basic-icon-default-montantCredit">Montant du crédit</label>
                <div class="input-group input-group-merge">
                    <input
                            type="text"
                            class="form-control"
                            id="basic-icon-default-montantCredit"
                            name="{{ field_name(form.montantCredit) }}"
                            value="{{ field_value(form.montantCredit) }}"
                            placeholder="{{ field_label(form.montantCredit) }}"
                            aria-describedby="basic-icon-default-montantCredit2"
                    />
                </div>
                <div class="text-danger mt-2">{{ form_errors(form.montantCredit) }}</div>
            </div>
            <div class="mb-3 col-md-6">
                <label class="form-label" for="basic-icon-default-dureeCredit">Durée du crédit (en mois)</label>
                <div class="input-group input-group-merge">
                    <input
                            type="number"
                            class="form-control"
                            id="basic-icon-default-dureeCredit"
                            name="{{ field_name(form.dureeCredit) }}"
                            value="{{ field_value(form.dureeCredit) }}"
                            placeholder="{{ field_label(form.dureeCredit) }}"
                            aria-describedby="basic-icon-default-dureeCredit2"
                    />
                </div>
                <div class="text-danger mt-2">{{ form_errors(form.dureeCredit) }}</div>
            </div>
        </div>

        <div class="row">
            <div class="mb-3 col-md-6">
                <label class="form-label" for="basic-icon-default-dateCredit">Date du crédit</label>
                <div class="input-group input-group-merge">
                    <input
                            type="date"
                            class="form-control"
                            id="basic-icon-default-dateCredit"
                            name="{{ field_name(form.dateCredit) }}"
                            {% if field_value(form.dateCredit) is not null %}
                                value="{{ field_value(form.dateCredit)|date('Y-m-d') }}"
                            {% endif %}
                            placeholder="{{ field_label(form.dateCredit) }}"
                            aria-describedby="basic-icon-default-dateCredit2"
                    />
                </div>
                <div class="text-danger mt-2">{{ form_errors(form.dateCredit) }}</div>
            </div>

            <div class="mb-3 col-md-6">
                <label class="form-label" for="basic-icon-default-tauxCredit">Taux</label>
                {{ form_widget(form.tauxCredit, {'attr': {'class': 'form-control'}}) }}
                <div class="text-danger mt-2">{{ form_errors(form.tauxCredit) }}</div>
            </div>
        </div>

        <div class="row">
            <div class="mb-3 col-md-6">
                <label class="form-label" for="basic-icon-default-status">Statut</label>
                {{ form_widget(form.status, {'attr': {'class': 'form-control'}}) }}
                <div class="text-danger mt-2">{{ form_errors(form.status) }}</div>
            </div>

            <div class="mb-3 col-md-6">
                <label class="form-label" for="basic-icon-default-user">User</label>
                {{ form_widget(form.user, {'attr': {'class': 'form-control'}}) }}
                <div class="text-danger mt-2">{{ form_errors(form.user) }}</div>
            </div>
        </div>
    </div>

    <div class="card-footer">
        <button type="submit" class="btn btn-primary">{{ button_label|default('Envoyer') }}</button>
    </div>
</div>

{{ form_end(form) }}
